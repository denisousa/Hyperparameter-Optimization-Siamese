<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>siamese</groupId>
  <artifactId>siamese</artifactId>
  <version>0.0.6-SNAPSHOT</version>
  <build>
    <plugins>
      <plugin>
        <groupId>org.antlr</groupId>
        <artifactId>antlr4-maven-plugin</artifactId>
        <version>4.7</version>
        <executions>
          <execution>
            <id>antlr-java</id>
            <goals>
              <goal>antlr4</goal>
            </goals>
            <configuration>
              <arguments>
                <argument>-package</argument>
                <argument>crest.siamese.language.java</argument>
              </arguments>
              <sourceDirectory>${basedir}/src/main/antlr4/java</sourceDirectory>
              <outputDirectory>${project.build.directory}/generated-sources/crest/siamese/language/java</outputDirectory>
            </configuration>
          </execution>
          <execution>
            <id>antlr-python3</id>
            <goals>
              <goal>antlr4</goal>
            </goals>
            <configuration>
              <arguments>
                <argument>-package</argument>
                <argument>crest.siamese.language.python3</argument>
              </arguments>
              <sourceDirectory>${basedir}/src/main/antlr4/python3</sourceDirectory>
              <outputDirectory>${project.build.directory}/generated-sources/crest/siamese/language/python3</outputDirectory>
            </configuration>
          </execution>
          <execution>
            <id>antlr-javascript</id>
            <goals>
              <goal>antlr4</goal>
            </goals>
            <configuration>
              <arguments>
                <argument>-package</argument>
                <argument>crest.siamese.language.javascript</argument>
              </arguments>
              <sourceDirectory>${basedir}/src/main/antlr4/jsx</sourceDirectory>
              <outputDirectory>${project.build.directory}/generated-sources/crest/siamese/language/javascript</outputDirectory>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>2.4.3</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <transformers>
                <transformer>
                  <mainClass>crest.siamese.Main</mainClass>
                </transformer>
                <transformer />
              </transformers>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.3</version>
        <configuration>
          <source>1.8</source>
          <target>1.8</target>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <reporting>
    <plugins>
      <plugin>
        <artifactId>maven-surefire-report-plugin</artifactId>
        <version>3.0.0-M3</version>
      </plugin>
    </plugins>
  </reporting>
</project>

